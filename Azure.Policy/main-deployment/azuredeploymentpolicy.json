{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    "parameters": {
        "targetMG": {
            "type": "string"
        },
        "AlertRuleActionGroupName": {
            "type": "String",
            "metadata": {
                "displayName": "Action Group Name",
                "description": "Name of the action group to use with this alert."
            },
            "defaultValue": "email_me"
        },
        "RuleResourceGroupName": {
            "type": "String",
            "metadata": {
                "displayName": "Resource Group Name",
                "description": "Name of the Resource Group that will contain the rule.",
                "strongType": "existingResourceGroups"
            },
            "defaultValue":"rg-alerts"
        }
    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/Andrew-Coughlin-MSFT/Azure/master/Azure.Policy/templates/",
        "mgScope": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('targetMG'))]",

        "linkedTemplates": {
            // Policy definitions
            "networksecuritygroup": "[concat(variables('templateBaseUrl'), 'policies/definitions/audit-activity-log-alert-monitor-for-network-security-group/azuredeploy.json')]",
            "networksecuritygrouprule" : "[concat(variables('templateBaseUrl'),'policies/definitions/audit-activity-log-alert-monitor-for-network-security-group-rules/azuredeploy.json')]",
            
           
            // Initiatives
            "initnsg": "[concat(variables('templateBaseUrl'), 'initatives/definitions/initiative-audit-activity-log-alert-monitor-network-security-group/azuredeploy.json')]",
            "initnsgrules": "[concat(variables('templateBaseUrl'),'initatives/definitions/initiative-activity-log-alert-monitor-network-security-group-rules/azuredeploy.json')]"
        }
    },
    "resources": [
        //NSG Rules monitoring
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "networkSecurityGroupPolicyDeployment",
            "location": "[deployment().location]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates').networksecuritygroup]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "nsgInitiativeDeployment",
            "location": "[deployment().location]",
            "dependsOn": [
                "networkSecurityGroupPolicyDeployment"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates').initnsg]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "targetMG": {
                        "value": "[parameters('targetMG')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "asgn-intntwk-sec-grps",
            "apiVersion": "2019-09-01",
            "location": "[deployment().location]",
            "identity": {
                "principalId": "azure-monitor-alerts-nsg",
                "tenantId": "[parameters('targetMG')]",
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "networkSecurityGroupPolicyDeployment",
                "nsgInitiativeDeployment"
                
            ],
            "properties": {
                "displayName": "Activity Log Alert Monitor Network Security Group",
                "parameters": {
                    "RuleResourceGroupName": {
                        "value": "[parameters('RuleResourceGroupName')]"
                    }
                },
                "scope": "[variables('mgScope')]",
                "policyDefinitionId": "[extensionResourceId(variables('mgScope'), 'Microsoft.Authorization/policySetDefinitions/', 'audit-azure-monitor-alerts-nsg')]"
            }
        },

        //NSG Rules monitoring
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "networkSecurityGroupRulesPolicyDeployment",
            "location": "[deployment().location]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates').networksecuritygrouprule]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "nsgRulesInitiativeDeployment",
            "location": "[deployment().location]",
            "dependsOn": [
                "networkSecurityGroupRulesPolicyDeployment"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates').initnsgrules]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "targetMG": {
                        "value": "[parameters('targetMG')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "name": "asgn-intntwk-sec-grps-rl",
            "apiVersion": "2019-09-01",
            "location": "[deployment().location]",
            "identity": {
                "principalId": "azure-monitor-alerts-nsg-rules",
                "tenantId": "[parameters('targetMG')]",
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "networkSecurityGroupRulesPolicyDeployment",
                "nsgRulesInitiativeDeployment"
                
            ],
            "properties": {
                "displayName": "Activity Log Alert Monitor Network Security Group Rules",
                "parameters": {
                    "RuleResourceGroupName": {
                        "value": "[parameters('RuleResourceGroupName')]"
                    }
                },
                "scope": "[variables('mgScope')]",
                "policyDefinitionId": "[extensionResourceId(variables('mgScope'), 'Microsoft.Authorization/policySetDefinitions/', 'audit-monitor-alerts-nsg-rules')]"
            }
        }

    ]
}