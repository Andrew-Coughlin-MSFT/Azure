{
 "properties": {
  "displayName": "Activity Log Alert Monitor SQL Server Firewall Rules",
  "policyType": "Custom",
  "mode": "All",
  "metadata": {
   "category": "Custom Policies",
   "createdBy": "20857a0c-5f1e-4ad9-b3d3-205ddb8b8799",
   "createdOn": "2021-02-28T20:42:09.3038573Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "actionGroupName": {
    "type": "String",
    "metadata": {
     "displayName": "Action Group Name",
     "description": "Name for the Action group."
    }
   },
   "activityLogAlertName": {
    "type": "String",
    "metadata": {
     "displayName": "Alert Name",
     "description": "Name for the Activity log alert."
    }
   },
   "ActivityLogAlertResourceGroupName": {
    "type": "String",
    "metadata": {
     "displayName": "Alert Resource Group Name",
     "description": "This is the name of the Resource Group that will contain the Activity log alert resource."
    }
   },
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effects",
     "description": "Enable or disable the execution of the Policy."
    },
    "allowedValues": [
     "DeployIfNotExists",
     "Disabled"
    ],
    "defaultValue": "DeployIfNotExists"
   },
   "operationName": {
    "type": "String",
    "metadata": {
     "displayName": "Operation Name",
     "description": "Administrative Operation name for which activity log alert should be configured"
    },
    "allowedValues": [
     "Microsoft.Sql/servers/firewallRules/write",
     "Microsoft.Sql/servers/firewallRules/delete"
    ]
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "equals": "Microsoft.resources/subscriptions"
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]",
    "details": {
     "type": "Microsoft.Insights/activityLogAlerts",
     "roleDefinitionIds": [
      "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
     ],
     "existenceCondition": {
      "allOf": [
       {
        "field": "Microsoft.Insights/ActivityLogAlerts/enabled",
        "equals": "true"
       },
       {
        "count": {
         "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*]",
         "where": {
          "anyOf": [
           {
            "allOf": [
             {
              "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].field",
              "equals": "category"
             },
             {
              "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].equals",
              "equals": "Administrative"
             }
            ]
           },
           {
            "allOf": [
             {
              "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].field",
              "equals": "operationName"
             },
             {
              "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].equals",
              "equals": "[parameters('operationName')]"
             }
            ]
           }
          ]
         }
        },
        "equals": 2
       },
       {
        "not": {
         "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].field",
         "equals": "category"
        }
       },
       {
        "not": {
         "field": "Microsoft.Insights/ActivityLogAlerts/condition.allOf[*].field",
         "equals": "operationName"
        }
       }
      ]
     },
     "ResourceGroupName": "[parameters('ActivityLogAlertResourceGroupName')]",
     "Name": "[parameters('activityLogAlertName')]",
     "deployment": {
      "properties": {
       "mode": "incremental",
       "template": {
        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
        "contentVersion": "1.0.0.0",
        "parameters": {
         "actionGroupName": {
          "type": "string"
         },
         "activityLogAlertName": {
          "type": "string"
         },
         "operationName": {
          "type": "string"
         }
        },
        "resources": [
         {
          "type": "Microsoft.Insights/activityLogAlerts",
          "apiVersion": "2017-04-01",
          "name": "[parameters('activityLogAlertName')]",
          "location": "Global",
          "properties": {
           "enabled": true,
           "scopes": [
            "[subscription().id]"
           ],
           "condition": {
            "allOf": [
             {
              "field": "category",
              "equals": "Administrative",
              "containsAny": null,
              "odata.type": null
             },
             {
              "field": "operationName",
              "equals": "[parameters('operationName')]",
              "containsAny": null,
              "odata.type": null
             }
            ],
            "odata.type": null
           },
           "actions": {
            "actionGroups": [
             {
              "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups', parameters('actionGroupName'))]"
             }
            ]
           }
          }
         }
        ]
       },
       "parameters": {
        "activityLogAlertName": {
         "value": "[parameters('activityLogAlertName')]"
        },
        "actionGroupName": {
         "value": "[parameters('actionGroupName')]"
        },
        "operationName": {
         "value": "[parameters('operationName')]"
        }
       }
      }
     }
    }
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/78dd488d-892f-4724-9861-9486288f62b8/providers/Microsoft.Authorization/policyDefinitions/89e13bc2-9b46-4782-9578-c8341ac59d95",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "89e13bc2-9b46-4782-9578-c8341ac59d95"
}