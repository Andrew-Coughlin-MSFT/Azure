    {
      "mode": "All",
      "parameters": {
        "effect": {
          "type": "String",
          "metadata": {
            "displayName": "Effect",
            "description": "Enable or disable the execution of the policy"
          },
          "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
          ],
          "defaultValue": "Deny"
        }
      },
      "policyRule": {
        "if":{
              "field": "type",
              "equals": "Microsoft.MachineLearningServices/workspaces"
            },
        "then": {
          "effect": "[parameters('effect')]"
        }
      }
    }